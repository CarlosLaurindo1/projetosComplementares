			informacao += "Valor transação" + movimentacao.getValor();
			if (tipo == 1) {
				informacao += "Tipo trancação: Depósito.";
			} else {
				informacao += "Tipo trancação: Saque.";
			}
		}
		JOptionPane.showMessageDialog(null, informacao);
	}

