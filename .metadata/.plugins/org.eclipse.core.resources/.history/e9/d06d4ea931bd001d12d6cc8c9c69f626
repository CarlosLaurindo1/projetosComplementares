package modelo;

import visualizacao.*;

public class Movimentacao {

	private int tipo;
	private static String titular;
	private static String dataNascimento, dataMov;
	private static long cpf;
	private double valor;
	private double saldo;
	private String data;
	private int totalTransacao;

	private static int tipoConta;

	public int getTipo() {
		return tipo;
	}

	public void setTipo(int tipo) {
		this.tipo = tipo;
	}

	public double getValor() {
		return valor;
	}

	public void setValor(double valor) {
		this.valor = valor;
	}

	public double getSaldo() {
		return saldo;
	}

	public void setSaldo(double valor) {
		this.saldo = saldo;
	}

	public String getData() {
		return data;
	}

	public void setData(String data) {
		this.data = data;
	}

	public void apresentarValor() {
		getValor();
	}

	public static String getTitular() {
		return titular;
	}

	public void setTitular() {
		this.titular = titular;
	}

	public static int getTipoConta() {
		return tipoConta;
	}

	public void setTipoConta() {
		this.tipoConta = tipoConta;
	}

	public static String getDataNascimento() {
		return dataNascimento;
	}

	public void setDataNascimento() {
		this.dataNascimento = dataNascimento;
	}

	public static long getCpf() {
		return cpf;
	}

	public void setCpf() {
		this.cpf = cpf;
	}

	public static String getDataMov() {
		return dataMov;
	}

	public void setDataMov() {
		this.dataMov = dataMov;
	}
	

	public void constroiExtratoCompleto(int tipo, double valor, String data) {
		setTipo(tipo);
		setValor(valor);
		setData(data);
	}

}
